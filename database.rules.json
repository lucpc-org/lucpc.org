{
  "rules": {
    "users": {
      ".read": "true",
      "$uid": {
        ".read": "true",
        ".write": "auth != null && $uid === auth.uid",
        "name": {
          ".validate": "newData.isString() && newData.val().length < 28"
        },
        "leetname": {
          ".validate": "newData.isString() && newData.val().length < 28"
        },
        "imageURL": { ".validate": true },
        "onLeaderboard": { ".validate": true },
        "problems": { 
          "easy": { ".validate": true },
          "medium": { ".validate": true },
          "hard": { ".validate": true },
          "$other": { ".validate": false }
        },
        "order": {
          "$all": {".validate": true }
        },
        "$other": { ".validate": false }
      }
    },
    "problems": {
      "$problem": {
        ".read": "true",
        ".write": "auth.token.admin === true",
        "easy": { ".validate": true },
        "medium": { ".validate": true },
        "hard": { ".validate": true },
        "$other": { ".validate": false }
      }
    }
  }
}
